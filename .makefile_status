srcs_count=$(ls ./srcs/*.c | wc -l)
objs_count=$(ls ./objs/*.o | wc -l)

if [ $objs_count -eq 1 ]; then echo -n -e "\nCompiling libft ...\n\n\r"; fi;
echo -n -e "\033[K\t$1\t["
for i in $(seq 1 $objs_count); do echo -n -e '='; done;
echo -n -e ">"
for j in $(seq 1 $(($srcs_count-$objs_count))); do echo -n -e ' '; done;
echo -n -e "] - $objs_count/$srcs_count\r"

